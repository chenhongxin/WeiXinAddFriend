<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xingqiba.weixinaddfriend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/col_tv_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_leftImage"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginLeft="@dimen/dp15"
            android:contentDescription="@null"
            android:scaleType="center" />

        <TextView
            android:id="@+id/tv_leftTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/specialTitleColor"
            android:textSize="@dimen/sp16" />

        <EditText
            android:id="@+id/et_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint=""
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp15"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/sp16" />

        <com.xingqiba.weixinaddfriend.widget.SpecialButton
            android:id="@+id/btn_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp05"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginTop="@dimen/dp05"
            app:angle_all="5dp"
            app:clicked="@color/btnStartClicked"
            app:unclicked="@color/btnStartUnClicked" />

        <ImageView
            android:id="@+id/img_nextIcon"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginRight="@dimen/dp12"
            android:contentDescription="@null"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/img_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp12"
            android:contentDescription="@null"
            android:scaleType="center"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/col_tv_hint" />

</LinearLayout>