<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xingqiba.weixinaddfriend"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.xingqiba.weixinaddfriend.permission.MIPUSH_RECEIVE"
        android:protectionLevel="signatureOrSystem" />

    <uses-permission android:name="com.xingqiba.weixinaddfriend.permission.MIPUSH_RECEIVE" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:persistent="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity android:name=".module.user.ChxLoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.user.ChxRegisterActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".module.main.MonitorAppActivity" android:screenOrientation="portrait" />

        <service
            android:name=".service.WeiXinAccessService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
        <service android:name=".service.LocalService" />
        <service
            android:name=".service.RemoteService"
            android:process=":com.xingqiba.weixinaddfriend.process" />
        <service android:name=".service.WeiXinHeartService" />
        
        <receiver   
		    android:name=".receiver.BootBroadcast"
		    android:permission="android.permission.RECEIVE_BOOT_COMPLETED">  
		    <intent-filter>  
		        <action android:name="android.intent.action.BOOT_COMPLETED" />
		        <action android:name="android.intent.action.BootBroadcast" />  
		    </intent-filter>
		</receiver>
		<receiver
		    android:name=".receiver.AlarmReceiver" >  
		    <intent-filter>  
		        <action android:name="arui.alarm.action" />  
		    </intent-filter>  
		</receiver>
    </application>

</manifest>